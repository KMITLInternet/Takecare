<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.takecare.MusicActivity" >
	<ImageView
        android:id="@+id/musicClick"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="54dp"
        android:src="@drawable/music" />
    <TextView 
        android:id="@+id/textView1" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_alignTop="@+id/musicClick" 
        android:layout_marginLeft="30dp" 
        android:layout_marginTop="35dp" 
        android:layout_toRightOf="@+id/musicClick" 
        android:text="Music1" android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/musicClick"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/textView1"
        android:src="@drawable/music" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginTop="35dp"
        android:text="Music2"
        android:textSize="20sp" />

</RelativeLayout>